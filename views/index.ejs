</h2>
<% var f=0 %>

    <% books.reverse().forEach(book => { %>
        
        <% if(f<10) { %> 
        <div class="card">
        <img height="180" width="200" src="https://res.cloudinary.com/dz9xduywu/image/upload/<%= book.coverImageName  %>.png">
        <div class="container">
            <p><%= book.title %> </p>
            <br>
            <p><%= book.author  %> </p>
            <br>
        <a href="/books/<%= book._id %>"><button>SHOW</button> </a>
        <hr/><% f=f+1 %> 
            
            <% } %>  
        </div>
        </div> 
    <%  }) %>